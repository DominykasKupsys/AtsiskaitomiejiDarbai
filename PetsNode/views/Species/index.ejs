<%- include('../layout/top') %>
<%- include('../layout/navbar') %>
<div
  class="container h-100 d-flex flex-column justify-content-center align-items-center text-center text-white"
>
  <h1 class="mt-3">Species <span class="text-warning">List</span></h1>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Species_ID</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i in species){ %>
      <tr>
        <td><%= species[i].ID %></td>
        <td><%= species[i].Name %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <div class="text-center">
    <a class="btn add mb-3 text-white" href="/species/create"
      ><i class="bi bi-plus-square mx-2"></i>Add species</a
    >
  </div>
</div>

<%- include('../layout/bottom') %>
