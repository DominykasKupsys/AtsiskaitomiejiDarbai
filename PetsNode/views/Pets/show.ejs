<%- include('../layout/top') %>
<div class="container">
  <h1 class="text-center mb-5"><%= title %></h1>

  <div
    class="h-100 d-flex flex-column justify-content-center align-items-center"
  >
    <h2><%= pet.name%></h2>
    <h3><%= pet.species%></h3>
    <h3>Added to this site on <%= pet.created_at%></h3>
    <img
      class="showImg img-fluid object-fit-cover"
      src="images/<%= pet.foto ?? 'nofoto.png' %>"
    />
    <div class="mt-3">
      <a class="btn btn-outline-success btn-sm mx-5" href="/pets/battle"
        ><i class="bi bi-archive"></i>Vote</a
      >
      <a class="btn btn-outline-primary btn-sm" href="/pets/<%= pet.ID %>/edit"
        ><i class="bi bi-pencil-square"></i> Edit</a
      >
      <a
        class="btn btn-outline-danger btn-sm mx-5"
        href="/pets/<%= pet.ID %>/delete"
        ><i class="bi bi-trash"></i> Delete</a
      >
    </div>
  </div>
</div>

<%- include('../layout/bottom')%>
