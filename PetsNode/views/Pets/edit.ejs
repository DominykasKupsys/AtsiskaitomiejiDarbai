<%- include('../layout/top') %>
<%- include("../layout/navbar")%>
<div class="container h-100 d-flex flex-column justify-content-center align-items-center my-5 text-white">

  <h1>Edit <span class="text-warning">Pet</span></h1>

  <%- include("../layout/message") %>

  <form 
    class="w-75"
    action="/pets/<%= pet.ID %>"
    method="post"
    enctype="multipart/form-data"
  >
  <div class="mb-3">
    <label for="species#" class="form-label">Choose species:</label>

    <select name="species_ID" id="species" class="form-control">
      <option value="<%= pet.species_ID %>">Dabartinė rūšis</option>
      <option value="1">Dog</option>
      <option value="2">Cat</option>
      <option value="3">Parrot</option>
      <option value="4">Hamster</option>
      <option value="5">Turtle</option>
    </select>
  </div>
    <div class="mb-3">
      <label for="Name" class="form-label">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="Name"
        value="<%= pet.name %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="Email">Email</label>
      <input
        name="email"
        type="text"
        class="form-control"
        id="Email"
        value="<%= pet.email %>"
      />
    </div>
    <div class="mb-3 w-50">
      <label class="form-label" for="Foto">Foto</label>
      <input
        name="foto"
        type="file"
        class="form-control"
        id="Foto"
        value="<%= photo %>"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
<%- include('../layout/bottom') %>
